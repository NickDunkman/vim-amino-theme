@template 'template.vim';
@name 'amino';
@maintainer 'Nick Dunkman <nickdunkman@gmail.com>';
@license 'MIT';
@background dark;

// ------------------------------------------------------------------------------------------------
//  Base colors
// ------------------------------------------------------------------------------------------------

$amino-aloe:     #50c795;
$amino-blue:     #2cc1dc;
$amino-eggplant: #4c2362;
$amino-grey:     #e0e7df;
$amino-navy:     #08272f;
$amino-orange:   #f68b29;
$amino-orchid:   #944492;
$amino-red:      #ef4858;
$amino-slate:    #b9c0bb;

$white: #ffffff;
$yellow: #ffde00;

// ------------------------------------------------------------------------------------------------
//  Aliases
// ------------------------------------------------------------------------------------------------

$normal-color: lighten($yellow, 46%);

$bg-color: adjust-color($amino-navy, $saturation: +4%, $lightness: -4%);
$bg-color-lighter-1: adjust-color($bg-color, $saturation: -10%, $lightness: +2%);
$bg-color-lighter-2: adjust-color($bg-color, $saturation: -30%, $lightness: +6%);

$active-color: $yellow;
$active-bg-color: $bg-color-lighter-2;

$highlight-color: $amino-navy;
$highlight-bg-color: $amino-orange;

$comment-color: darken($amino-slate, 40%);
$string-color: adjust-color($amino-aloe, $saturation: -2%, $lightness: +2%);

$error-color: $amino-red;

// ------------------------------------------------------------------------------------------------
//  Standard rules
// ------------------------------------------------------------------------------------------------

Normal {
  guibg: $bg-color;
  guifg: $normal-color;
}

Comment {
  guifg: $comment-color;
}

ColorColumn {
  guifg: $error-color;
  guibg: $bg-color-lighter-1;
}

Cursor {
  guibg: $yellow;
}

CursorLine {
  guibg: $active-bg-color;
}

MatchParen {
  guibg: $amino-orchid;
  guifg: $white;
}

Search {
  guibg: $highlight-bg-color;
  guifg: $highlight-color;
}

String {
  guifg: $string-color;
}

SpecialKey {
  guibg: $error-color;
  guifg: $white;
}

Visual {
  guibg: $active-bg-color;
  guifg: $active-color;
}

// ------------------------------------------------------------------------------------------------
//  Bars
// ------------------------------------------------------------------------------------------------

$bar-bg-color: adjust-color($bg-color, $saturation: -10%, $lightness: +10%);

StatusLine,
StatusLineNC {
  guifg: $bar-bg-color;
}

StatusLine {
  guibg: $yellow;
}

// Status line of unfocused buffers
StatusLineNC {
  guibg: adjust-color($amino-orchid, $saturation: -10%, $lightness: +10%);
}

VertSplit {
  guibg: $bar-bg-color;
  guifg: $bar-bg-color;
}

// ------------------------------------------------------------------------------------------------
//  Line numbers
// ------------------------------------------------------------------------------------------------

$line-number-bg-color: $bg-color-lighter-2;

LineNr {
  guibg: $line-number-bg-color;
  guifg: adjust-color($line-number-bg-color, $saturation: -25%, $lightness: +25%);
}

CursorLineNr {
  guibg: $line-number-bg-color;
  guifg: $yellow;
}

// ------------------------------------------------------------------------------------------------
//  Sign column
// ------------------------------------------------------------------------------------------------

$sign-column-bg-color: $bar-bg-color;

SignColumn {
  guibg: $sign-column-bg-color;
}

// ------------------------------------------------------------------------------------------------
//  Git gutter (https://github.com/airblade/vim-gitgutter)
// ------------------------------------------------------------------------------------------------

GitGutterAdd,
GitGutterChange,
GitGutterDelete,
GitGutterChangeDelete {
  guibg: $sign-column-bg-color;
}

GitGutterAdd {
  guifg: $amino-aloe;
}

GitGutterChange {
  guifg: $yellow;
}

GitGutterDelete {
  guifg: $amino-red;
}

GitGutterChangeDelete {
  guifg: $amino-orange;
}

// ------------------------------------------------------------------------------------------------
//  Omni completion menu
// ------------------------------------------------------------------------------------------------

$pmenu-bg-color: adjust-color($amino-aloe, $saturation: +20%, $lightness: -20%);

Pmenu {
  guibg: $pmenu-bg-color;
  guifg: $white;
}

// Selected item in the menu
PmenuSel {
  guibg: $amino-blue;
}

// Scrollbar
PmenuSbar {
  guibg: adjust-color($pmenu-bg-color, $saturation: +10%, $lightness: -10%);
}

// Scrollbar thumb
PmenuThumb {
  guibg: $yellow;
}

// ------------------------------------------------------------------------------------------------
//  Indent Guides (https://github.com/nathanaelkane/vim-indent-guides)
// ------------------------------------------------------------------------------------------------

$base-indent-color: $sign-column-bg-color;
$alt-indent-color: adjust-color($base-indent-color, $saturation: +3%, $lightness: -3%);

IndentGuidesOdd {
  guibg: $base-indent-color;
}

IndentGuidesEven {
  guibg: $alt-indent-color;
}

// ------------------------------------------------------------------------------------------------
//  Reset
// ------------------------------------------------------------------------------------------------

Error { guibg: $bg-color; guifg: $normal-color; }
Todo { guibg: $bg-color; guifg: $normal-color; }
Constant { guibg: $bg-color; guifg: $normal-color; }
Exception { guibg: $bg-color; guifg: $normal-color; }
Operator { guibg: $bg-color; guifg: $normal-color; }
Special { guibg: $bg-color; guifg: $normal-color; }
SpecialChar { guibg: $bg-color; guifg: $normal-color; }
Character { guibg: $bg-color; guifg: $normal-color; }
Number { guibg: $bg-color; guifg: $normal-color; }
Statement { guibg: $bg-color; guifg: $normal-color; }
Keyword { guibg: $bg-color; guifg: $normal-color; }
Label { guibg: $bg-color; guifg: $normal-color; }
Identifier { guibg: $bg-color; guifg: $normal-color; }
Type { guibg: $bg-color; guifg: $normal-color; }
Function { guibg: $bg-color; guifg: $normal-color; }
StorageClass { guibg: $bg-color; guifg: $normal-color; }
PreProc { guibg: $bg-color; guifg: $normal-color; }

