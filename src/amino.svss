@template 'template.vim';
@name 'amino';
@maintainer 'Nick Dunkman <nickdunkman@gmail.com>';
@license 'MIT';
@background dark;

// ------------------------------------------------------------------------------------------------
//  Base colors
// ------------------------------------------------------------------------------------------------

$amino-aloe:     #50c795;
$amino-blue:     #2cc1dc;
$amino-eggplant: #4c2362;
$amino-grey:     #e0e7df;
$amino-navy:     #08272f;
$amino-orange:   #f68b29;
$amino-orchid:   #944492;
$amino-red:      #ef4858;
$amino-slate:    #b9c0bb;

$white: #ffffff;
$black: #000000;
$yellow: #ffff00;

// ------------------------------------------------------------------------------------------------
//  Aliases
// ------------------------------------------------------------------------------------------------

$main-bg-color: adjust-color($amino-navy, $saturation: +4%, $lightness: -4%);

// ------------------------------------------------------------------------------------------------
//  Standard rules
// ------------------------------------------------------------------------------------------------

Normal {
  guibg: $main-bg-color;
  guifg: $white;
}
